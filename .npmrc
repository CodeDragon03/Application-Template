# Automatically install missing peer dependencies
auto-install-peers=true

# Prevent install errors on strict peer dependency mismatch
strict-peer-dependencies=false

# Use consistent Node.js version
use-node-version=22.15.0

# Enforce pnpm usage according to packageManager field
package-manager-strict=true

# Prefer local workspace packages over public registry
prefer-workspace-packages=true

# Hoist essential tooling to the root for IDE and tooling compatibility
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
hoist-pattern[]=*
