{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*", "test/**/*"]
    },
    "clean": {
      "cache": false
    }
  }
}
